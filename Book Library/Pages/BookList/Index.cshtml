@page
@model Book_Library.Pages.BookList.IndexModel
@{
}


<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <h2>Book Library</h2>
            <a asp-page="CreateBook" class="btn btn-primary">Create new book</a>
        </div>

        <div class="col-12 ">
            @if(Model.Books.Count() >0)
            {
                  <table class="table table-bordered table-striped">
                <tr>
                    <th>
                         @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Title)
                    </th>

                    <th>
                       @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                    </th>
                     <th>
                       @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                    </th>
                 
                    <th>Actions</th>
                </tr>
              @foreach (var item in Model.Books)
              {
                  <tr>
                      <td>@item.Title</td>
                       <td>@item.ISBN</td>
                          <td>@item.Author</td>
                       <td>
                           <button type="submit" asp-page-handler="Delete"  asp-route-id="@item.Id" onclick="return confirm('Vill du ta bort den?')"
                           class="btn btn-danger">Delete</button>
                           <a asp-page="UpdateBook" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                       </td>
                  </tr>
              }
            </table>
            }
        </div>
    </div>
</div>