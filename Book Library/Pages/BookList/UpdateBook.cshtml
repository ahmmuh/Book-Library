@page
@model Book_Library.Pages.BookList.UpdateBookModel


<h3>Update book</h3>
<br />
<div class="container row">
    <div class="col">
        <form method="post">
            <input type="hidden" asp-for="Book.Id" />
            <div class="form-group">
                <input class="form-control mb-3" type="text" asp-for="Book.Title" />
                <span asp-validation-for="Book.Title"></span>
            </div>
               <div class="form-group">
                <input class="form-control mb-3" type="text" asp-for="Book.ISBN" />
                 <span asp-validation-for="Book.ISBN"></span>
            </div>
               <div class="form-group">
                <input class="form-control mb-3" type="text" asp-for="Book.Author" />
                 <span asp-validation-for="Book.Author"></span>
            </div>
        
            <a asp-page="Index" class="btn btn-secondary">Go back</a>
            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
</div>