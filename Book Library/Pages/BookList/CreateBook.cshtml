@page
@model Book_Library.Pages.BookList.CreateBookModel
@{
}


<h3>Create new book</h3>
<br />
<div class="container row">
    <div class="col">
        <form method="post">
            <div class="form-group mb-3">
                <input class="form-control mb-3" type="text" asp-for="Book.Title" />
                <span class="text-danger" asp-validation-for="@Model.Book.Title"></span>
            </div>
               <div class="form-group mb-3">
                <input class="form-control mb-3" type="text" asp-for="Book.ISBN" />
                <span class="text-danger" asp-validation-for="@Model.Book.ISBN"></span>
            </div>
               <div class="form-group mb-3">
                <input class="form-control mb-3" type="text" asp-for="Book.Author" />
                <span class="text-danger" asp-validation-for="@Model.Book.Author"></span>
            </div>
        
            <a asp-page="Index" class="btn btn-secondary">Go back</a>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>